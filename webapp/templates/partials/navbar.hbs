<!-- Fixed navbar -->
<header role="banner" class="navbar-fixed-top navbar-default">
  <div class="container">
    <div class="navbar-header navbar-left pull-left">
      <a href=".">
        <img alt="{{ event.name }}" class="logo logo-dark" src="assets/img/logo.png">
      </a>
    </div>

    <div class="navbar-header navbar-right pull-right">
      {{#if otherpage}}
      <ul style="margin-left:20px" class="nav navbar-nav pull-left"> 
        <li class="pull-left"><a href="{{ otherpage }}.html" style="padding-right:0; padding-left:0;margin-left:15px"><b>РУС</b>|{{ event.second_language_text }}</a></li> 
      </ul> 
      {{/if}}
      <button data-toggle="collapse-side" data-target=".side-collapse" type="button" class="navbar-toggle pull-right">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="hidden-lg hidden-md hidden-sm clearfix"></div>
    <div class="side-collapse in">
      <nav role="navigation" class="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="navlink"><a id="homelink" href="index.html">Начало</a>
        <li class="navlink"><a id="schedulelink" href="schedule.html">Программа</a></li>
        <li class="navlink"><a id="speakerslink" href="speakers.html">Презентеры</a></li>
        <li class="navlink"><a id="calendarlink" href="calendar.html">Сетка</a></li>
        {{#if event.map}}
        <li class="navlink"><a id="maplink" href="map.html">Карта</a></li>
        {{/if}}
      </ul>
      </nav>
      
      <div class="navbar-track-list">
        <hr>
        {{#each tracks}}
          {{#if name}}
          <div class="navbar-track-info">
            <span style="background-color: {{color}};" class="titlecolor"></span>&nbsp;<span class="track-name">{{name}}</span>
          </div>
          {{/if}}
        {{/each}}
        <hr>
      </div>
      
      <div class="navbar-version">
        Версия:&nbsp;{{version}}
        <br>
        <div class="btn btn-reload" id="version-refresh" role="button" style="border-radius: 6px">ОБНОВИТЬ</div>
      </div>
      
    </div>
  </div>
</header>

<script type="text/javascript">
  document.getElementById("version-refresh").onclick = function() {
    location.reload();
    return false;
  };
</script>
