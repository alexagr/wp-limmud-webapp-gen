height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
{{/if}}

<!-- Fixed navbar -->
<header role="banner" class="navbar-fixed-top navbar-default">
  <div class="container">
    <div class="navbar-header navbar-left pull-left">
      <a href=".">
        <img alt="{{ event.name2 }}" class="logo logo-dark" src="{{event.logo}}">
      </a>
    </div>

    <div class="navbar-header navbar-right pull-right">
      <ul style="margin-left: 20px; padding-right: 0;" class="nav navbar-nav pull-left"> 
        <li class="pull-left"><a href="{{ otherpage2 }}.html" style="padding-right:0; padding-left:0;margin-left:15px"><b>עבר</b>|РУС</a></li>
      </ul> 
      <button data-toggle="collapse-side" data-target=".side-collapse" type="button" class="navbar-toggle pull-right">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="hidden-lg hidden-md hidden-sm clearfix"></div>
    <div class="side-collapse in">
      <nav role="navigation" class="navbar-collapse">
      <ul class="nav navbar-nav navbar-right" style="padding-right:0;">
        <li class="navlink" align="right"><a id="homelink" href="index_he.html">ראשי</a>
        <li class="navlink" align="right"><a id="schedulehelink" href="schedule_he.html">תוכנית</a></li>
        <li class="navlink" align="right"><a id="speakershelink" href="speakers_he.html">מרצים</a></li>
        <li class="navlink" align="right"><a id="calendarhelink" href="calendar_he.html">לו"ז</a></li>
        {{#if event.map2}}
        <li class="navlink" align="right"><a id="maphelink" href="map_he.html">מפה</a></li>
        {{/if}}
      </ul>
      </nav>

      <div class="navbar-track-list">
        <hr>
        {{#each tracks}}
          {{#if name2}}
          <div class="navbar-track-info">
            <span style="background-color: {{color}};" class="titlecolor"></span>&nbsp;<span class="track-name">{{name2}}</span>
          </div>
          {{/if}}
        {{/each}}
        <hr>
      </div>
      
      <div class="navbar-version">
        גרסה:&nbsp;{{version}}
        <br>    
        <div class="btn btn-reload" id="version-refresh" role="button" style="border-radius: 6px">עדכן</div>
      </div>
      
    </div>
  </div>
</header>

<script type="text/javascript">
  document.getElementById("version-refresh").onclick = function() {
    location.reload();
    return false;
  };
</script>
